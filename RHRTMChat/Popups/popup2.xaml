<?xml version="1.0" encoding="utf-8" ?>
<mopup:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mopup="clr-namespace:Mopups.Pages;assembly=Mopups"
             x:Class="RHRTMChat.Popups.popup2"
             Title="popup2">
    <VerticalStackLayout BackgroundColor="Blue"
                         HeightRequest="200"
                         WidthRequest="200">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Cerrar popup"
                x:Name="BtnClosePopup"
                Clicked="BtnClosePopup_Clicked"/>
    </VerticalStackLayout>
</mopup:PopupPage>
