<?xml version="1.0" encoding="utf-8" ?>
<mpopup:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mpopup="clr-namespace:Mopups.Pages;assembly=Mopups"
             x:Class="RHRTMChat.Popups.popup1"
             Title="popup1">
    <VerticalStackLayout BackgroundColor="Red"
                         x:Name="ContainerRed">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Abrir popup"
                x:Name="BtnOpenPopup"
                Clicked="BtnOpenPopup_Clicked"/>
        <Button Text="Cerrar popup"
                x:Name="BtnClosePopup"
                Clicked="BtnClosePopup_Clicked"/>
    </VerticalStackLayout>
</mpopup:PopupPage>
