<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RHRTMChat.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:RHRTMChat.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Iniciar Sesion"
        ContentTemplate="{DataTemplate views:Login}"
        Route="Login" />

    <TabBar Route="Home">
        <Tab Title="Estados"
             Icon="status">
            <ShellContent ContentTemplate="{DataTemplate views:StatusPage}"/>
        </Tab>
        <Tab Title="Llamadas"
             Icon="telephone">
            <ShellContent ContentTemplate="{DataTemplate views:CallPage}"/>
        </Tab>
        <Tab Title="Camara"
             Icon="camera">
            <ShellContent ContentTemplate="{DataTemplate views:CameraPage}"/>
        </Tab>
        <Tab Title="Chats"            
             Icon="chat">
            <ShellContent ContentTemplate="{DataTemplate views:ChatPage}"/>
        </Tab>
        <Tab Title="Configuracion"
             Icon="settings">
            <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}"/>
        </Tab>
    </TabBar>
</Shell>

